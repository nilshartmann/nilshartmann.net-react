{
  "name": "simpleblog",
  "version": "0.0.1",
  "description": "A simple, react-based blog. Inspired by https://github.com/jlongster/blog",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./client/public/_dist",
    "build": "npm run clean && webpack --progress --config webpack.config.prod.js",
    "start": "node ./server/index.js",
    "server:watch": "nodemon --debug ./server/index.js",
    "server:watch-hot": "cross-env HOTLOADER=true nodemon --debug ./server/index.js",
    "test": "mocha ./test --compilers js:babel-register --recursive",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/nilshartmann/simpleblog"
  },
  "author": "Nils Hartmann",
  "license": "MIT",
