    "async": "1.5.0",
    "babel-polyfill": "^6.6.1",
    "babel-register": "^6.3.13",
    "boom": "2.8.0",
    "color": "^0.11.1",
    "events": "^1.1.0",
    "file-loader": "^0.9.0",
    "hapi": "^12.1.0",
    "hapi-auth-jwt2": "^5.3.1",
    "highlight.js": "8.7.0",
    "inert": "^3.2.0",
    "isomorphic-fetch": "^2.2.1",
    "joi": "6.6.1",
    "jsonwebtoken": "^5.5.4",
    "lodash": "^3.10.1",
    "marked": "0.3.5",
